    <script>
        // Инициализация Telegram Web App
        const tg = window.Telegram.WebApp;
        tg.expand();
        tg.enableClosingConfirmation();

        // Данные магазина в стиле LV
        const shopData = {
            categories: [
                {id: 'all', name: 'All'},
                {id: 'bags', name: 'Bags'},
                {id: 'clothing', name: 'Clothing'},
                {id: 'shoes', name: 'Shoes'},
                {id: 'accessories', name: 'Accessories'}
            ],
            products: [
                {
                    id: '1',
                    name: 'Signature Tote',
                    price: 980,
                    category: 'bags',
                    emoji: '👜',
                    sizes: ['S', 'M', 'L'],
                    description: 'Crafted leather tote with signature detailing'
                },
                {
                    id: '2', 
                    name: 'Classic Blazer',
                    price: 1250,
                    category: 'clothing',
                    emoji: '👔',
                    sizes: ['XS', 'S', 'M', 'L', 'XL'],
                    description: 'Tailored blazer in premium wool blend'
                },
                {
                    id: '3',
                    name: 'Leather Loafers',
                    price: 890,
                    category: 'shoes', 
                    emoji: '👞',
                    sizes: ['39', '40', '41', '42', '43', '44'],
                    description: 'Handcrafted leather with comfortable fit'
                },
                {
                    id: '4',
                    name: 'Silk Scarf',
                    price: 450,
                    category: 'accessories',
                    emoji: '🧣',
                    sizes: ['ONE SIZE'],
                    description: 'Pure silk scarf with heritage pattern'
                }
            ]
        };

        let cart = [];
        let currentCategory = 'all';

        // Инициализация магазина
        function initShop() {
            displayProducts(shopData.products);
            setupCategoryTabs();
        }

        // Настройка вкладок категорий
        function setupCategoryTabs() {
            const container = document.querySelector('.category-nav');
            container.innerHTML = '';
            
            shopData.categories.forEach(category => {
                const tab = document.createElement('div');
                tab.className = `category-tab ${category.id === currentCategory ? 'active' : ''}`;
                tab.textContent = category.name;
                tab.onclick = () => filterByCategory(category.id);
                container.appendChild(tab);
            });
        }

        // Отображение товаров
        function displayProducts(products) {
            const grid = document.getElementById('productsGrid');
            grid.innerHTML = '';

            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'lv-product-card';
                
                productCard.innerHTML = `
                    <div class="product-image">
                        <div class="product-emoji">${product.emoji}</div>
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">${product.name}</h3>
                        <p class="product-description">${product.description}</p>
                        <div class="product-price">€${product.price}</div>
                        <div class="size-selector">
                            ${product.sizes.map(size => `
                                <div class="size-option" onclick="selectSize(this, '${product.id}', '${size}')">
                                    ${size}
                                </div>
                            `).join('')}
                        </div>
                        <button class="lv-button" onclick="addToCart('${product.id}')" disabled>
                            Add to Cart
                        </button>
                        <button class="lv-button secondary" onclick="requestConsultation('${product.id}')">
                            Consultation
                        </button>
                    </div>
                `;
                
                grid.appendChild(productCard);
            });
        }

        // Остальные функции (фильтрация, корзина, заказы) аналогичны предыдущей версии
        // Добавьте здесь JavaScript код из предыдущего примера для работы корзины и заказов
        
        // Загрузка при старте
        document.addEventListener('DOMContentLoaded', initShop);
    </script>
